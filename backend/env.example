# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Database Configuration (for production)
DATABASE_URL=sqlite:///./legal_assistant.db

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-in-production

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key-here
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp

# Document AI Configuration
DOCUMENT_AI_PROCESSOR_ID=your-processor-id-here
DOCUMENT_AI_LOCATION=us

# Web Crawler Configuration
CRAWLER_RATE_LIMIT=1  # seconds between requests
CRAWLER_MAX_URLS=100
CRAWLER_USER_AGENT=Legal Assistant Bot 1.0 (Educational Purpose)

# Vector Store Configuration
VECTOR_DIMENSION=384  # for all-MiniLM-L6-v2 model
VECTOR_METRIC=cosine
VECTOR_INDEX_NAME=legal-documents

# RAG Configuration
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=5
RAG_MIN_SIMILARITY=0.7

# Legal Sources Configuration
LEGAL_SOURCES_CACHE_TTL=3600  # 1 hour in seconds
LEGAL_SOURCES_BACKUP_FILE=legal_sources_backup.json

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/legal_assistant.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds
